%footer.footer
  .container
    .row
      %section.col-sm-4
        %p
          = t '.copywrite_notice'
        %a.logo-icon{href: "/", title: "Onodo"}
          Onodo
        %a.civio-icon{href: "https://www.civio.es/", target: "_blank", title: t('common.civio_foundation')}
          Civio
      %section.bordered.col-sm-4
        .row
          %ul.col-sm-6
            %li
              %a{href: "/explore"}
                = t 'common.explore'
            %li
              %a{href: "/gallery"}
                = t 'common.gallery'
            %li
              %a{href: "/tutorials"}
                = t 'common.documentation'
            %li
              %a{href: "#contact", "data-toggle" => "collapse", "aria-expanded" => "true", "aria-controls" => "contact"}
                = t 'common.contact'
          %ul.col-sm-6
            %li
              = link_to t('common.terms_of_service'), terms_of_service_path
            %li
              = link_to t('common.privacy_policy'), privacy_policy_path
      %section.col-sm-4
        .social-icons
          %p
            %strong
              = t '.follow_us'
          %ul
            %li
              %a.twitter{href: 'https://twitter.com/Onodo_', title: 'Twitter Onodo', target: '_blank'}
                =t(:witter)
        %p.newsletter
          %a{href: '//civio.us4.list-manage.com/subscribe?u=9416fe6b76f2c3f985c1f8e0f&id=d9f51512d0', title: t('.subscribe'), target: '_blank'}
            = t '.subscribe'
        %p.footer-info
          %span.eu-icon
          = t '.funding_notice'
